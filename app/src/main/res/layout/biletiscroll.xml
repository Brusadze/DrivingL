<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#1f2c34">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"

            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/linearImageQuestionBilet"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageQuestionBilet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO"
                            android:src="@drawable/bileti2"></ImageView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/shekitxvatextBilet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="რომელი ავტომობილის მძღოლი დაარღვევს საგზაო მოძრაობის წესებს ისრის მიმართულებით მოძრაობის შემთხვევაში ?"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/medcap"
                        android:textStyle="bold"></TextView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/firstQuestionRelativeBilet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pasuxi"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pasuxiErtiTextBilet"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medcap"
                        android:text="თეთრი ავტომობილის მძღოლი"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/secondQuestionRelativeBilet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pasuxi"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pasuxiOriTextBilet"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="მწვანე ავტომობილის მძღოლი"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/medcap"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutMesameQuestBilet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pasuxi"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pasuxiSamiTextBilet"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="შავი ავტომობილის მძღოლი"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/medcap"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewLast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutMeotxeQuestBilet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pasuxi"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pasuxiOtxiTextBilet"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="არცერთი ავტომობილის მძღოლი"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:fontFamily="@font/medcap"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <View
            android:id="@+id/viewIdBilet"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            >

        </View>

    </LinearLayout>


</RelativeLayout>