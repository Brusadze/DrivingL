<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrivingL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusbari</item>
        <item name="colorPrimaryVariant">@color/statusbari</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--   <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>  -->
         <item name="android:statusBarColor">@color/statusbari</item>
         <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DrivingL.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DrivingL.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DrivingL.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>